generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PremiumUser {
  userId String @id @map("_id") // Maps userId to MongoDB's _id field
  prefix String?
  tier   Int    @default(0)
}