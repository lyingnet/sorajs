{
    "extends": "@sapphire/ts-config",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "ES2020",
        "lib": [
            "DOM", "es2020"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "skipLibCheck": false
    },
    "include": ["src"]
}